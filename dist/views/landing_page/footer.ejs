<script>
    window.addEventListener('scroll', scrollTrigger);

    const elementsReveal = document.querySelectorAll('.section');
    scrollTrigger();
    function scrollTrigger() {
        elementsReveal.forEach(element => {
            if (isElementInViewport(element)) {
                $(element).addClass('visible')
            } else {
                // $(element).removeClass('visible')
            }
        });

        const scrollToTopBtn = document.getElementById('scrollToTopBtn');
        if (window.scrollY > 200) {
            scrollToTopBtn.classList.add('visible');
        } else {
            scrollToTopBtn.classList.remove('visible');
        }
    }

    function isElementInViewport(el) {
        const rect = el.getBoundingClientRect();
        return (
            rect.top >= 0 &&
            rect.left >= 0 &&
            rect.bottom - rect.height <= (window.innerHeight + 50 || document.documentElement.clientHeight + 50) &&
            rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
    }

    document.getElementById('scrollToTopBtn').addEventListener('click', function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
    document.getElementById('menu-toggle').addEventListener('click', function () {
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu.classList.toggle('open');
    });
    window.addEventListener('click', function (e) {
        const classes = e.target.classList;
        const isFabars = classes.contains('fa-bars');
        if (e.target.id !== 'menu-toggle' && !isFabars) {
            console.log('fechando');
            document.getElementById('mobile-menu').classList.remove('open');
        }
    });
    function handleAfiliado(afiliado = false) {
        const divAfiliado = document.getElementById('afiliado');
        document.querySelectorAll('.section').forEach(section => section.style.display = afiliado ? 'none' : 'block');
        divAfiliado.style.display = !afiliado ? 'none' : 'block';
        // abrir section de afiliado
        divAfiliado.querySelector('.section').style.display = !afiliado ? 'none' : 'block';
    }

